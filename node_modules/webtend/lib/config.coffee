path = require 'path'
_ = require 'underscore'
# 运行文件的目录
appPath = path.dirname process.mainModule.filename

properties =
  # 静态文件的请求URL前缀
  staticPrefix : "/static"
  # 静态文件目录
  staticPath : "#{appPath}/static"
  # 静态文件的HTTP缓存时间（单位秒）
  fileMaxAge : 15 * 60

config = {}
  # getStaticPath : () ->

  # getStaticPrefix : () ->

  # getStaticFileMaxAge : () ->

_.each properties, (value, property) ->
  Object.defineProperty config, property, {
    get : () ->
      return config[property]
    set : (value) ->
      if value?
        config[property] = value
    enumerable : false
    configurable : false
    writable : true
    value : value
  }

module.exports = config